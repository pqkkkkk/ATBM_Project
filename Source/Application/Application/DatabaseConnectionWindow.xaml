<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Application.DatabaseConnectionWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Application"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="DatabaseConnectionWindow">

    <Grid>
        <Border
    x:Name="databaseConnection"
    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
    BorderThickness="1"
    CornerRadius="8"
    Padding="20">
            <StackPanel Spacing="16">
                <!-- Header -->
                <TextBlock Text="Database Connection"
           Style="{ThemeResource SubtitleTextBlockStyle}"
           Margin="0,0,0,8"/>

                <!-- Data Source URL -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Data Source URL"
               Style="{ThemeResource CaptionTextBlockStyle}"
               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBox x:Name="DataSourceUrlTextBox"
             PlaceholderText="Enter server URL or IP address"/>
                </StackPanel>

                <!-- Data Source Port -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Data Source Port"
               Style="{ThemeResource CaptionTextBlockStyle}"
               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBox x:Name="DataSourcePortTextBox"
             PlaceholderText="Enter port number (e.g., 1433)"
             InputScope="Number"/>
                </StackPanel>

                <!-- Database Name -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Database Name"
               Style="{ThemeResource CaptionTextBlockStyle}"
               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBox x:Name="DatabaseNameTextBox"
             PlaceholderText="Enter database name"/>
                </StackPanel>

                <!-- Continue Button -->
                <Button x:Name="ContinueButton"
        Content="Continue"
        Style="{ThemeResource AccentButtonStyle}"
        HorizontalAlignment="Right"
        Margin="0,8,0,0"
        Click="ContinueButton_Click"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
