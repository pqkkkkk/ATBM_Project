<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Application.Views.ObjectUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Application.Views"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:components="using:Application.Views.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Action Buttons and Search -->
        <StackPanel Grid.Row="0" 
               Orientation="Horizontal" 
               Spacing="10" 
               Margin="0,0,0,20">
            <Button 
                Content="Detail"
                Background="#9C27B0" 
                Foreground="White" 
                Width="100"/>
            <Button Content="Add" 
               Background="#9C27B0" 
               Foreground="White" 
               Width="100"/>
            <Button Content="Update" 
               Background="#9C27B0" 
               Foreground="White" 
               Width="100"/>
            <Button Content="Delete" 
               Background="#9C27B0" 
               Foreground="White" 
               Width="100"/>

            <AutoSuggestBox PlaceholderText="Type username..." 
                       Width="250" 
                       Margin="20,0,0,0"/>
            <Button Content="Search" 
               Background="#9C27B0" 
               Foreground="White" 
               Width="100"/>
        </StackPanel>

        <!-- Data List -->
        <components:DataListUC
            x:Name="dataList"
            Grid.Row="1"
            userViewModel="{x:Bind userDataViewModel}"
            roleViewModel="{x:Bind roleDataViewModel}"/>
    </Grid>
</UserControl>
