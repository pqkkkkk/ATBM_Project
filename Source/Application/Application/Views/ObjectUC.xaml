<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Application.Views.ObjectUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Application.Views"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:components="using:Application.Views.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Action Buttons and Search -->
        <StackPanel Grid.Row="0" 
               Orientation="Horizontal" 
               Spacing="10" 
               Margin="0,0,0,20">
            <Button 
                Content="Detail"
                Click="DetailClickHandler"
                Background="#9C27B0" 
                Foreground="White" 
                Width="100"/>
            <Button 
                Content="Add" 
                Click="AddClickHandler" 
                Background="#9C27B0" 
                Foreground="White" 
                Width="100"/>
            <Button
                Click="UpdateClickHandler"
                Content="Update" 
                Background="#9C27B0" 
                Foreground="White" 
                Width="100"/>
            <Button
                Click="DeleteClickHandler"
                Content="Delete" 
                Background="#9C27B0" 
                Foreground="White" 
                Width="100"/>

            <AutoSuggestBox PlaceholderText="Type username..." 
                       Width="250" 
                       Margin="20,0,0,0"/>
            <Button Content="Search" 
               Background="#9C27B0" 
               Foreground="White" 
               Width="100"/>
        </StackPanel>

        <!-- Data List -->
        <components:DataListUC
            x:Name="dataList"
            Grid.Row="1"
            mainViewModel="{x:Bind mainViewModel}"
            userViewModel="{x:Bind userDataViewModel}"
            roleViewModel="{x:Bind roleDataViewModel}"/>
        
        <!-- Create user dialog -->
        <ContentDialog
            x:Name="createUserDialog">
            <ContentDialog.CloseButtonText> Cancel </ContentDialog.CloseButtonText>
            <ContentDialog.PrimaryButtonText> Create </ContentDialog.PrimaryButtonText>
            <ContentDialog.Title>Create User</ContentDialog.Title>

            <ContentDialog.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBox
                        Grid.Row="0"
                        x:Name="UsernameTextBox" 
                        Header="Username" 
                        PlaceholderText="Enter username" 
                        Width="300"/>
                    <PasswordBox
                        x:Name="PasswordTextBox"
                        Grid.Row="1"
                        Header="Password" 
                        PlaceholderText="Enter password" 
                        Width="300"/>
                </Grid>
            </ContentDialog.Content>
        </ContentDialog>
        
        <!-- Create role dialog-->
        <ContentDialog
            x:Name="createRoleDialog">
            <ContentDialog.CloseButtonText>Cancel</ContentDialog.CloseButtonText>
            <ContentDialog.PrimaryButtonText>Create</ContentDialog.PrimaryButtonText>
            <ContentDialog.Title>Create Role</ContentDialog.Title>

            <ContentDialog.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBox
                        Grid.Row="0"
                        x:Name="roleTextBox" 
                        Header="Role name" 
                        PlaceholderText="Enter role name" 
                        Width="300"/>
                </Grid>
            </ContentDialog.Content>
        </ContentDialog>
        
        <!-- Delete warning dialog-->
        <!-- Create role dialog-->
        <ContentDialog
            x:Name="deleteWarningDialog">
            <ContentDialog.CloseButtonText>No</ContentDialog.CloseButtonText>
            <ContentDialog.PrimaryButtonText>Yes</ContentDialog.PrimaryButtonText>
            <ContentDialog.Title>Delete</ContentDialog.Title>

            <ContentDialog.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Text="Are you sure you want to delete selected item?"
                        Width="300"/>
                </Grid>
            </ContentDialog.Content>
        </ContentDialog>

        <!-- Update user dialog -->
        <ContentDialog
            x:Name="updateUserDialog">
            <ContentDialog.CloseButtonText>Cancel</ContentDialog.CloseButtonText>
            <ContentDialog.PrimaryButtonText>Update</ContentDialog.PrimaryButtonText>
            <ContentDialog.Title>Update User</ContentDialog.Title>

            <ContentDialog.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <PasswordBox
                        x:Name="UpdatePasswordTextBox"
                        Grid.Row="1"
                        Header="Password" 
                        PlaceholderText="Enter password" 
                        Width="300"/>   
                    </Grid>
            </ContentDialog.Content>
        </ContentDialog>
    </Grid>
</UserControl>
